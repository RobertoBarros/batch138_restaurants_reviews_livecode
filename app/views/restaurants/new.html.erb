<div class="container">
  <h1>Create a new Restaurant</h1>

  <%= simple_form_for @restaurant do |f| %>

    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :description %>
    <%= f.input :category, collection: %w[french italian brazilian] %>

    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>